.container
  .page-header.list-page
    %h2 Realizar examen
  .row

    %form#formulario-examen{:action => "/examen/realizar/#{@examen[:idExamen]}", :method => "post", :name => "form-realizar-exam", :role => "form"}
      .form-horizontal
        - @preguntasExamen.each do |pregunta|
          .form-group
            %label.col-lg-8.control-label.left{:for => "titulo"}= pregunta[:titulo]
            - case pregunta[:tipo]
            - when "corta"
              %input.form-control{:placeholder => "Respuesta", :type => "text", :id => "#{pregunta[:idPregunta]}", :name => "idPregunta#{pregunta[:idPregunta]}", :required => ""}
            - when "vf"
              .radio.radio-inline
                %label
                  %input#optionsRadios1{:name => "opciones#{pregunta[:idPregunta]}", :type => "radio", :value => "true", :required => ""}
                    Verdadero
              .radio.radio-inline
                %label
                  %input#optionsRadios2{:name => "opciones#{pregunta[:idPregunta]}", :type => "radio", :value => "false", :required => ""}
                    Falso
           
            %input{:id => 'oculto', :name => "idRespuesta" + "#{pregunta[:idRespuesta]}", :type => "hidden", :value => "#{pregunta[:idRespuesta]}"}
        .form-group
          .col-lg-11
            %button.btn.btn-primary{:type => "submit", :id => "guardar"} Enviar