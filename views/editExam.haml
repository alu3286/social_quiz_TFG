    %form#formulario{:action => "/examen/#{@examen[:idExamen]}", :method => "post", :name => "form-new-exam", :role => "form"}
      .form-horizontal
        .form-group
          %label.col-lg-2.control-label{:for => "titulo"} Texto del examen
          .col-lg-8
            %input.form-control{:placeholder => "Introduzca un texto", :type => "text", :id => "titulo", :autofocus => "", :required => "", :value => @examen[:titulo]}
        .form-group
          /%label.col-lg-2.control-label{:for => "apertura"} Fecha de apertura
          .col-lg-5
            #datetimepicker1.input-group.date
              %input.form-control{:type => "text", :id => "fecha_apertura", :placeholder => "Fecha de apertura", :required => "", :value => @examen[:fecha_apertura]}
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
          /%label.col-lg-2.control-label{:for => "cierre"} Fecha de cierre
          .col-lg-5
            #datetimepicker2.input-group.date
              %input.form-control{:type => "text", :id => "fecha_cierre", :placeholder => "Fecha de cierre", :required => "", :value => @examen[:fecha_cierre]}
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
        :javascript
