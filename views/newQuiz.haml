  .form-group
    %label.col-lg-2.control-label{:for => "titulo"} Título
    .col-lg-8
      %input.form-control{:autofocus => "", :name => "titulo", :placeholder => "Título", :type => "text", :required => ""}
  .form-group
    %label.col-lg-2.control-label{:for => "tags"} Tags
