        %input#option2{:name => "tipo", :type => "radio", :value => "corta"}
          Respuesta corta
      %label.btn.btn-primary{:id => "resp-multiple"}
        %input#option3{:name => "tipo", :type => "radio", :value => "multiple"}
          Respuesta múltiple
